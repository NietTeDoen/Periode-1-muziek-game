<Window x:Class="Muziek_Game.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Muziek_Game"
        mc:Ignorable="d"
        Title="MainMenu" Height="450" Width="800">
    <Grid>
        <!-- Gebruik StackPanel om een rij buttons te creëren -->
        <StackPanel Orientation="Vertical" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
            <!-- Buttons in een rij -->
            <Button Click="Button_Click" Width="100" Height="50" Margin="10"> Button 1 </Button>
            <Button Width="100" Height="50" Margin="10"> Button 2 </Button>
            <Button Width="100" Height="50" Margin="10">Button 3</Button>
        </StackPanel>
    </Grid>
</Window>

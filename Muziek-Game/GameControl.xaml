<UserControl x:Class="Muziek_Game.GameControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="720" Width="1280">
    <Grid>
        <Canvas x:Name="GameCanvas" Background="White">
            <!-- Game elementen worden hier toegevoegd -->
        </Canvas>

        <!-- Pauze Menu -->
        <StackPanel x:Name="PauseMenu" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Hervatten" Click="ResumeButton_Click" Width="200" Height="50" />
            <Button Content="Terug naar hoofdmenu" Click="MainMenuButton_Click" Width="200" Height="50" />
        </StackPanel>

        <!-- Pauzeerknop zichtbaar tijdens gameplay -->
        <Button Content="Pauzeer" Click="PauseButton_Click" Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10"/>
    </Grid>
</UserControl>

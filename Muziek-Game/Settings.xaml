<UserControl x:Class="Muziek_Game.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="720" Width="1280">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
            <TextBlock Text="Instellingen" FontSize="36" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <TextBlock Text="Volume" FontSize="24" Margin="0,10,0,5"/>
            <Slider x:Name="VolumeSlider" Minimum="0" Maximum="100" Value="50" TickFrequency="1" 
                    IsSnapToTickEnabled="True" Width="300"/>

            <TextBlock Text="Muziek aan/uit" FontSize="24" Margin="0,20,0,5"/>
            <CheckBox x:Name="MusicToggle" Content="Muziek Ingeschakeld" IsChecked="True" 
                       FontSize="20" Margin="0,0,0,10"/>

            <TextBlock Text="Bewegende Achtergrond" FontSize="24" Margin="0,20,0,5"/>
            <CheckBox x:Name="BackgroundToggle" Content="Achtergrond Ingeschakeld" IsChecked="True" 
                       FontSize="20" Margin="0,0,0,10"/>

            <Button Content="Terug" Click="BackButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
